<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Related Work Card{% endblock %}</title>
</head>

<body>
    <form name="related_work_form" method="post" class="dataForm" novalidate="novalidate" action="{{ path('related_work', {'id_user': user.id, 'id_catalog': catalog.id, 'id_product': product.id}) }}"> 
        <div class="row general_information_content">
            <div class="col-12"> 
                <div class="row GI">
                    <div class="col-12 col-lg-4 inputsGI"> 
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Related work</h5>
                                <span>Work Relation Code</span>
                                {{ form_widget(formRW.workRelationCode, {'attr': {'class': 'form-select'}}) }}   
                                
                                <span>Identifier Type</span>
                                {{ form_widget(formRW.workIDType, {'attr': {'class': 'form-select'}}) }}

                                <label class="form-label">Identifier Value</label>
                                {{ form_widget(formRW.workIDValue, {'attr': {'class': 'form-control', 'placeholder': 'Identifier value', 'type':'text'}}) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ form_rest(formRW) }}

        {% include 'updateAddTemplates/bottomButtons.html.twig' %}
    </form>
</body>
</html>