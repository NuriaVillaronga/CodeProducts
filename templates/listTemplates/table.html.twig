                      <td><input type="checkbox">{{ product.titleText }}</td>
                  </tr>
                {% endfor %}
                <tr><th>Árbitro</th></tr>
                {% for product in pagination %}
                  <tr>
                      <td>{{ product.recordReference }}</td>
                  </tr>
                {% endfor %}
                <tr><th>ISBN13/EAN</th></tr>
                {% for product in pagination %}
                  <tr>
                      <td>___________</td>
                  </tr>
                {% endfor %}
                <tr><th>Forma del producto</th></tr>
                {% for product in pagination %}
                  <tr>
                      <td>{{ product.productForm }}</td>
                  </tr>
                {% endfor %}
                <tr><th>Autores</th></tr>
                {% for contributor in pagination %}
                  <tr>
                      <td>___________</td>
                  </tr>
                {% endfor %}
                <tr><th>Asignaturas</th></tr>
                {% for product in pagination %}
                  <tr>
                      <td>{{ product.subjectHeadingText }}</td>
                  </tr>
                {% endfor %}
                <tr><th><i class="bi bi-image-fill"></i></th></tr>
                {% for product in pagination %}
                  <tr>
                      <td>________</td>
                  </tr>
                {% endfor %}
                <tr><th>ONIX</th></tr>
                {% for product in pagination %}
                  <tr>
                      <td>______</td>
                  </tr>
                {% endfor %}
                <tr><th></th></tr>
                {% for product in pagination %}
                  <tr>
                      <td>
                        <a href="{{ path('update_product', {'id_user': user.id, 'id_catalog': catalog.id, 'id_product': product.id}) }}" class="btn btn-sm btn-primary">edit</a>
                        <a class="btn btn-sm btn-danger">duplicate</a> 
                        <a href="{{ path('delete_product', {'id_user': user.id, 'id_catalog': catalog.id, 'id_product': product.id}) }}" class="btn btn-sm btn-danger">delete</a>
                      </td>
                  </tr>
                {% endfor %}
            </table>
        </div>
        <!--Pagination-->
            {% include 'listTemplates/pagination.html.twig' %}
        <!---->
      {% else %}
        <div>No products loaded yet</div>
      {% endif %}
    </div>
</body>
</html>