        <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/additional-methods.min.js"></script>
        
        <script src="{{ asset('js/validationGI.js') }}?v=123"></script>
        
        <script src="{{ asset('js/showLabelsInputs.js') }}"></script>
        <script src="{{ asset('js/hamburguerMenu.js') }}"></script>
        <script src="{{ asset('js/changeButtonsClick.js') }}"></script>
        <script src="{{ asset('js/select2.js') }}"></script>
    {% endblock %}
</head>

<body>
    <!--Navigation menu-->
        {% include 'common/menu.html.twig' %}
    <!---->

    <div class="container-fluid"> 
            <!--Edition searchs-->
                {% include 'updateAddTemplates/searchs.html.twig' %}
            <!---->
            <!--Basic edition-->
                {{ render(path('basic_edition', { 'id_product': product.id, 'id_user': user.id, 'id_catalog': catalog.id } )) }}
            <!---->
            <!--Tab-->
                {% include 'updateAddTemplates/tab.html.twig' %}
            <!---->
    </div>
</body>
</html>